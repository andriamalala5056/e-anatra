<!DOCTYPE html>
<html>
  <head>
    <title>EAnatra</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- TAB FOR LOGIN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- DATE PICKER FOR LOGIN -->
    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <!--link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"-->

    <!-- BOOTSTRAP EN LOCALE -->
    <%= stylesheet_link_tag    'bootstrap.min.css' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <!-- LOGIN MESSAGE -->
      <%= notice %>
      <%= alert %>
    <!-- NAVBAR MENU -->
    <div class="shadow-sm fixed-top bg-perso">
      <div class="container">
        <div class="d-flex bd-highlight">
          <div class="p-ando flex-grow-1 bd-highlight">
            <a href="/">
              <img class="logo" src="/logo_pm.png">
            </a>
          </div>
          <div class="p-ando bd-highlight">
          <nav class="navbar-new navbar-expand-lg navbar-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                  <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">A propos</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Choisir son école
                      </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                      </div>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Blog</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Nous contacter</a>
                    </li>
                    <!-- USER RENDER -->
                    <%= if user_signed_in?
                        render partial: 'layouts/with_user'
                     else  
                        render partial: 'layouts/without_user'
                     end 
                    %>
                    <!-- USER RENDER END -->
                  </ul>
                </div>
                <!-- LOGIN BUTTON START -->
                <!-- button type="button" class="btn connexion-btn" data-toggle="modal" data-target=".bd-example-modal-lg">Connexion</button-->
                <!-- LOGIN BUTTON END -->
            </nav>
          </div>
        </div>
      </div>
    </div>
    <!-- NAVBAR MENU END -->
    <!-- SECTION SEARCH START -->
    <div class="search-bar-container blue">
      <div class="container">
        <div class="row">
          <div class="col align-self-center">
            <div class="input-group">
              <select class="custom-select" id="inputGroupSelect04">
                <option selected>Antananarivo</option>
                <option value="1">Antsiranana</option>
                <option value="2">Mahajanga</option>
                <option value="3">Toamasina</option>
                <option value="4">Fianarantsoa</option>
                <option value="5">Toliary</option>
              </select>
              <select class="custom-select" id="inputGroupSelect04">
                <option selected>Enseignement générale</option>
                <option value="1">Université</option>
                <option value="2">Musique</option>
                <option value="3">Cours</option>
              </select>
              <input type="text" class="form-control no-border" placeholder="Mots clé..." aria-label="Mots clé" aria-describedby="basic-addon2">
              <div class="input-group-append">
                <button class="btn search-box-btn" type="button">Recherche</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- SECTION SEARCH END -->
    <%= yield %>
  </body>

  <!--script id="dsq-count-scr" src="//e-anatra.disqus.com/count.js" async></script-->
  <!-- JS UTILES POUR LE BOOTSTRAT -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
</html>